%{_datadir}/wok/plugins/kimchi/ui/config/*.xml
%{_datadir}/wok/plugins/kimchi/ui/
%{_datadir}/wok/plugins/kimchi
%{_sysconfdir}/wok/plugins.d/kimchi.conf
%{_sysconfdir}/wok/plugins.d/template.conf
